    <script>
        function newUser() {
            const name = document.getElementById("user_name").value.trim()
            const email = document.getElementById("user_email").value.trim()
            const password = document.getElementById("user_password").value.trim()

            const role = (function () {
                const radio = document.getElementsByClassName("user_role");

                for (i = 0; i < radio.length; i++) {
                    if (radio[i].checked)
                        return radio[i].value.trim();
                }
            })()

            const data = {
                "name": name,
                "email": email,
                "password": password,
                "role": role
            }

            $.post(("https://bloom-town.herokuapp.com/api/user/"), data, function (data, status) {
                alert(status);
            })
        }
    </script>
